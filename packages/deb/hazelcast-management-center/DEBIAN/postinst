#!/bin/sh

for FILENAME in /usr/lib/hazelcast-management-center/bin/*mc*; do
  case "${FILENAME}" in
    *bat)
      ;;
    *)
      ln -s "${FILENAME}" /usr/bin/"$(basename "${FILENAME}")"
      ;;
  esac
done

printf "\n\nHazelcast Management Center is successfully installed to '/usr/lib/hazelcast-management-center/'\n"
